<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apnatutorials.androidimagebutton.MainActivity">

    <ImageButton
        android:id="@+id/ibtnHome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="handleIbtnHomeClick"
        android:scaleType="centerCrop"
        android:src="@drawable/button_selector" />

    <ImageButton
        android:id="@+id/ibtnSimpleImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ibtnHome"
        android:background="#000"
        android:scaleType="fitXY"
        android:src="@drawable/home_normal"

        />

    <ImageButton
        android:id="@+id/ibtnDefault"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ibtnSimpleImageButton"

        android:layout_marginBottom="10dp" />

    <ImageButton
        android:id="@+id/ibtnColorPrimary"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ibtnDefault"
        android:background="@color/colorPrimary" />

</RelativeLayout>
